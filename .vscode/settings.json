{
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.options": {
    "extensions": [".ts", ".html"]
  },
  "editor.formatOnSave": true,
  // ... more config
  "editor.codeActionsOnSave": {
    "source.fixAll.esLint": true,
    "source.organizeImports": false
  },
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html"
  ],
  "eslint.lintTask.enable": true
}
